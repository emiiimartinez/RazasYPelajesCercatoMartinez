<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JugarCruza">

    <ImageView
        android:id="@+id/caballo"
        android:layout_width="382dp"
        android:layout_height="218dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caballo1" />

    <ImageButton
        android:id="@+id/caballo1"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toStartOf="@+id/caballo2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/caballo"
        app:srcCompat="@drawable/caballo1" />

    <ImageButton
        android:id="@+id/caballo2"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/caballo1"
        app:layout_constraintEnd_toStartOf="@+id/caballo3"
        app:layout_constraintStart_toEndOf="@+id/caballo1"
        app:layout_constraintTop_toTopOf="@+id/caballo1"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/caballo1" />

    <ImageButton
        android:id="@+id/caballo3"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/caballo2"
        app:layout_constraintEnd_toStartOf="@+id/caballo4"
        app:layout_constraintStart_toEndOf="@+id/caballo2"
        app:layout_constraintTop_toTopOf="@+id/caballo2"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/caballo1" />

    <ImageButton
        android:id="@+id/caballo4"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:adjustViewBounds="true"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="@+id/caballo3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/caballo3"
        app:srcCompat="@drawable/caballo1" />

    <ImageButton
        android:id="@+id/volver"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginBottom="8dp"
        android:background="@android:color/background_light"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.843"
        app:layout_constraintStart_toEndOf="@+id/caballo3"
        app:layout_constraintTop_toBottomOf="@+id/caballo4"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/home_regular" />

</android.support.constraint.ConstraintLayout>